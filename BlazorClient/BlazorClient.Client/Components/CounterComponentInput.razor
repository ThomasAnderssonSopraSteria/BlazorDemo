@rendermode InteractiveWebAssembly  //Andra modes är InteractiveServer, InteractiveAuto

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<InputText @bind-Value=CurrentCountString  />

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    public string CurrentCountString
    {
        get => currentCount.ToString();
        set
        {
            if (int.TryParse(value, out int tempValue))
            {
                currentCount = tempValue;
            }
        }
    }

    [Parameter]
    public int? InitialCount { get; set; }

    private void IncrementCount()
    {
        currentCount++;
    }

    protected override async Task OnInitializedAsync()
    {
        currentCount = InitialCount ?? 0;
    }
}